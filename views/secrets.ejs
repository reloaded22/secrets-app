<%- include('partials/header') %>
<%- include('navbar', {loggedIn:loggedIn}) %>

  <div class="container-fluid pt-5 text-center">
    <h1 class="display-3"><i class="fas fa-key fa-sm text-secondary"></i> These are all people's secrets:</h1>
    <hr>
    <div class="row g-2">
      <%let count = -1%>
      <%users.forEach((user, i)=>{%>
        <%user.secrets.forEach((secret)=>{%>
          <%count += 1%>
          <% if (count%2 === 0) { %>
            <div class="col-3 col-lg-2 text-capitalize text-danger">
              <div class="card bg-dark h-100">
                <div class="card-body d-flex align-items-center justify-content-center">
                  <h5 class="card-title"><%=secret%></h5>
                </div>
              </div>
            </div>
          <%} else {%>
            <div class="col-3 col-lg-2 text-capitalize text-info">
              <div class="card bg-dark h-100">
                <div class="card-body d-flex align-items-center justify-content-center">
                  <h5 class="card-title"><%=secret%></h5>
                </div>
              </div>
            </div>
          <%}%>
        <%})%>
      <%})%>
    </div>
  </div>
  <hr>
  <div class="text-center">
    <a class="btn btn-dark" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
