<%- include('partials/header') %>
<%- include('navbar', {loggedIn:loggedIn}) %>

<div class="page-content">
  <div class="container-fluid pt-5 text-center">
    <h1 class="display-3"><i class="fas fa-key fa-sm text-secondary"></i> These are all people's secrets:</h1>
    <hr>
  </div>
  <div class="container text-center">
    <%let count = -1%>
    <%users.forEach((user, i)=>{%>
      <%user.secrets.forEach((secret)=>{%>
        <%count += 1%>
        <% if (count%2 === 0) { %>
          <p class="h3 bg-dark py-1 text-capitalize text-danger"><%=secret%></p>
        <%} else {%>
          <p class="h3 bg-dark py-1 text-capitalize text-info"><%=secret%></p>
        <%}%>
      <%})%>
    <%})%>
  </div>
  <hr>
  <div class="text-center">
    <a class="btn btn-dark" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
